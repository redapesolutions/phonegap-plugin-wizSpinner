<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="jp.wizcorp.phonegap.plugin.wizSpinnerPlugin"
    version="2.0.0">
    
    <engines>
        <engine name="cordova" version=">=3.0.0" />
    </engines>

    <name>Wizard Spinner Plugin</name>
    <description>This plugin allows you to create native spinners & loaders above your HTML application layer.</description>
    <author>Ally Ogilvie - aogilvie@wizcorp.jp</author>
    <keywords>spinner,loader</keywords>
    <license>MIT</license>

    <asset src="assets/spinner.gif" target="plugins/wizSpinner/spinner.gif" />

    <js-module src="wizSpinner.js" name="wizSpinnerPlugin">
        <clobbers target="wizSpinner" />
    </js-module>

    <!-- android -->
    <platform name="android">

        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="WizSpinnerPlugin" >
                <param name="android-package" value="jp.wizcorp.phonegap.plugin.wizSpinner.WizSpinnerPlugin"/>
            </feature>
        </config-file>
        
        <source-file src="platforms/android/WizSpinnerPlugin.java" target-dir="src/jp/wizcorp/phonegap/plugin/wizSpinner"/>
        <source-file src="platforms/android/WizSpinner.java" target-dir="src/jp/wizcorp/phonegap/plugin/wizSpinner"/> 
    </platform>

    <!-- ios -->
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="WizSpinnerPlugin">
                <param name="ios-package" value="WizSpinnerPlugin"/>
                <param name="onload" value="true" />
            </feature>
            <plugin name="WizSpinnerPlugin" value="WizSpinnerPlugin"/>
        </config-file>
                 
        <header-file src="platforms/ios/WizActivitySpinnerView.h" target-dir="wizSpinner" />
        <source-file src="platforms/ios/WizActivitySpinnerView.m" compiler-flags="-fno-objc-arc" target-dir="wizSpinner" />
        <header-file src="platforms/ios/WizSpinnerPlugin.h" target-dir="wizSpinner" />
        <source-file src="platforms/ios/WizSpinnerPlugin.m" compiler-flags="-fno-objc-arc" target-dir="wizSpinner" />
        <header-file src="platforms/ios/WizAssetsPluginExtendCDVViewController.h" target-dir="wizSpinner" />
        <source-file src="platforms/ios/WizAssetsPluginExtendCDVViewController.m" compiler-flags="-fno-objc-arc" target-dir="wizSpinner" />
        <source-file src="platforms/ios/WizAssetsPluginExtendCDVViewControllerPrivate.h" target-dir="wizSpinner" /> 
        <header-file src="platforms/ios/WizDebugLog.h" target-dir="wizSpinner" />
        
        <source-file src="platforms/ios/wizSpinner.plist" target-dir="wizSpinner" />
        
        <framework src="ImageIO.framework" />

    </platform>
</plugin>
